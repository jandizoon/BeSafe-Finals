@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/bootstrap/dist/css/loginbootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/loginstyle.css" rel="stylesheet" />


</head>

<body>


    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-1">
                    <h1 class="heading-section"></h1>
                </div>
            </div>
            <br />
            <br />



            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div style="background-color: #56cc9d" class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last" >

                            <div class="text w-100">
                                <h2 style="color:white">Welcome to login</h2>
                                <p style="color:white">Don't have an account?</p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Sign Up</a>
                            </div>

                        </div>
                        <div class="login-wrap p-4 p-lg-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign In</h3>
                                </div>
                            </div>
                            <section>
                                <form id="account" method="post" class="signin-form">
                                    <h4>Use a local account to log in.</h4>
                                    <hr />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="form-control btn btn-success submit px-3">Log in</button>
                                    </div>

                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-left">
                                            <label class="checkbox-wrap checkbox-primary mb-0" asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>



                                        <div class="w-50 text-md-right">
                                            <p>
                                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password</a>
                                            </p>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </section>

    <script src="~/js/js/main.js"></script>
    <script src="~/js/js/popper.js"></script>
    <script src="~/js/js/jquery.min.js"></script>
    <script src="~/js/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

